{
  "name": "discord-bot",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up -d; sleep 3; bun --watch ./src/index.ts",
    "bot": "bun ./src/index.ts",
    "migrate:dev": "prisma migrate dev --name init",
    "migrate:prod": "prisma migrate deploy",
    "generate": "prisma generate",
    "postinstall": "prisma generate --no-engine"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^9.26.0",
    "prisma": "^6.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@huggingface/inference": "^3.12.1",
    "@prisma/client": "^6.7.0",
    "axios": "^1.9.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1"
  }
}
